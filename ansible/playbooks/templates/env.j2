# Hovawart Database Environment Configuration
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

# Docker Hub Configuration
DOCKERHUB_USER={{ vault_dockerhub_user }}

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://{{ vault_postgres_user }}:{{ vault_postgres_password }}@postgres:5432/{{ vault_postgres_db }}?schema=public

POSTGRES_DB={{ vault_postgres_db }}
POSTGRES_USER={{ vault_postgres_user }}
POSTGRES_PASSWORD={{ vault_postgres_password }}

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET={{ vault_jwt_secret }}
JWT_EXPIRES_IN=7d

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_PORT=3001
API_HOST=0.0.0.0
LOG_LEVEL=info

# =============================================================================
# WEB CONFIGURATION
# =============================================================================
WEB_PORT=3000
NEXT_PUBLIC_API_URL={{ vault_public_api_url | default('https://api.hovawart.local') }}

# =============================================================================
# NODE ENVIRONMENT
# =============================================================================
NODE_ENV=production

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_RETENTION_DAYS=30

# =============================================================================
# SECURITY
# =============================================================================
CORS_ORIGIN={{ vault_cors_origin | default('https://hovawart.local') }}


